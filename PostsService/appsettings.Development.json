{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=testDB;Port=5432;User Id=postgres;Password=mysecretpassword;Include Error Detail=true",
    "SqliteConnection": "Data Source=database.sqlite",
    "MSSQLConnection": "Server=(localdb)\\Database=cleanarchitecture;Trusted_Connection=True;MultipleActiveResultSets=true",
    "PostgresConnection": "Server=localhost;Database=postgres;Port=5432;User Id=postgres;Password=mysecretpassword",
    "AzureSQLConnection": "InSecertJson"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithClientIP", "WithClientAgent" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "ApplicationName": "PostsService"
      //"Environment": "Development"
    }
  }
}
